{
    "compilerOptions": {
        "target": "ES5",
        "module": "ES6",
        "outDir": "dist",
        "lib": [
            "ES2020",
            "dom"
        ],
        "strict": true,
        "declaration": true,
        "strictPropertyInitialization": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "exclude": [
        "dist"
    ]
}
